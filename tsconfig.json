{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "outDir": "map/dist",
    // where to put the compiled JS files
    "sourceMap": true,
    "target": "ES2020",
    // which level of JS support to target
    "module": "es6",
    // which system for the program AMD, UMD, System, CommonJS

    // Recommended: Compiler complains about expressions implicitly typed as 'any'
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "Node"
  },
  "include": ["map/*.ts"],
  // which files to compile
  "exclude": ["node_modules"]
  // which files to skip
}
